@model JOBPORTAL.Models.Job

@{
    ViewBag.Title = "Job Detail";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="relative max-w-7xl w-full mx-auto">
    <div class="flex flex-col mt-10 mb-10">
        <div class="flex mb-10">
            <div>
                <span class="mb-2 text-sm font-normal text-blue-600 mb-5">
                    Job summary
                </span>
                <h2 class="text-4xl font-extrabold text-slate-900 tracking-tight uppercase">
                    @Html.DisplayFor(model => model.JobName)
                </h2>
            </div>
            <div>
                
            </div>
        </div>
        <div class="relative flex overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <tbody class="divide-y divide-gray-200">
                    <tr>
                        <td class="w-28	px-6 py-4 pl-0 text-sm font-bold uppercase">
                            Category
                        </td>
                        <td class="px-6 py-4 text-start text-sm font-normal">
                            @Html.DisplayFor(model => model.JobCategory.JobCategoryName)
                        </td>
                    </tr>
                    <tr>
                        <td class="w-28	px-6 py-4 pl-0 text-sm font-bold uppercase">
                            Requirement
                        </td>
                        <td class="px-6 py-4 text-sm font-normal text-gray-800">
                            @Html.DisplayFor(model => model.JobRequirements)
                        </td>
                    </tr>
                    <tr class="align-top">
                        <td class="w-28	px-6 py-4 pl-0 text-sm font-bold align-top uppercase">
                            Description
                        </td>
                        <td class="px-6 py-4 text-sm font-normal text-gray-800">
                            @Html.DisplayFor(model => model.JobDescription)
                        </td>
                    </tr>
                    <tr>
                        <td class="w-28	px-6 py-4 pl-0 text-sm font-bold uppercase">
                            Salary
                        </td>
                        <td class="px-6 py-4 text-sm font-normal text-gray-800">
                            NPR @Html.DisplayFor(model => model.JobSalary)
                        </td>
                    </tr>
                    <tr>
                        <td class="w-28	px-6 py-4 pl-0 text-sm font-bold uppercase">
                            Position
                        </td>
                        <td class="px-6 py-4 text-sm font-normal text-gray-800">
                            @Html.DisplayFor(model => model.JobPosition)
                        </td>
                    </tr>
                    <tr>
                        <td class="w-28	px-6 py-4 pl-0 text-sm font-bold uppercase">
                            Location
                        </td>
                        <td class="px-6 py-4 text-start text-sm font-normal">
                            @Html.DisplayFor(model => model.JobLocation)
                        </td>
                    </tr>
                    <tr>
                        <td class="w-28	px-6 py-4 pl-0 text-sm font-bold uppercase">
                            Working hrs
                        </td>
                        <td class="px-6 py-4 text-start text-sm font-normal">
                            @Html.DisplayFor(model => model.JobWorkingHour)
                        </td>
                    </tr>
                    <tr>
                        <td class="w-28	px-6 py-4 pl-0 text-sm font-bold uppercase">
                            Employer
                        </td>
                        <td class="px-6 py-4 text-start text-sm font-normal">
                            @Html.DisplayFor(model => model.Employer.EmployerName)
                        </td>
                    </tr>  
                </tbody>
            </table>
        </div>
        <div class="flex mt-10">
            <a href="/Jobs/" class="py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M2 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1H3.707l10.147 10.146a.5.5 0 0 1-.708.708L3 3.707V8.5a.5.5 0 0 1-1 0z"></path>
                </svg>
                Back to Jobs
            </a>
        </div>
    </div>
</div>